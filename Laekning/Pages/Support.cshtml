@page
@model SupportModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Support</title>
    
    <!-- Bootstrap CSS for layout and components -->
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome for icons -->
	<link href="/lib/font-awesome/css/all.min.css" rel="stylesheet" />

    <style>
        /* Main content container for page heading */
		.content {
			width: 100%;
			min-height: 30px;
            flex-grow: 1;
            background-color: rgba(0, 0, 0, 0.6); 
            padding: 20px;
            border-radius: 10px;
			text-align: center;
            box-shadow: 0 4px 10px rgba(0, 255, 255, 0.3);
			backdrop-filter: blur(8px);
		}

        /* Container for sidebar + main content */
        .support-container {
            display: flex;
            flex-direction: row; /* Sidebar on left, content on right */
            gap: 20px;
            padding: 20px;
			align-items: stretch;
        }

        /* Sidebar for support options */
        .support-sidebar {
            width: 250px;
			min-height: 300px;
            background-color: rgba(0, 0, 0, 0.6); 
            padding: 15px;
            border-radius: 8px;
			box-shadow: 0 4px 10px rgba(0, 255, 255, 0.3);
			backdrop-filter: blur(8px);
        }

        /* Main dynamic content area */
        .support-content {
			width: 100%;
			min-height: 300px;
            flex-grow: 1; /* Take remaining width */
            background-color: rgba(0, 0, 0, 0.6); 
            padding: 20px;
            border-radius: 10px;
			text-align: center;
            box-shadow: 0 4px 10px rgba(0, 255, 255, 0.3);
			backdrop-filter: blur(8px);
        }

        /* Navbar customizations (if used) */
        .navbar-custom { background-color: #F0FFFF; padding: 10px 20px; }
        .navbar-brand img { height: 45px; max-width: 265px; }
        .nav-link { color: #333; font-weight: 500; }
        .nav-link:hover { color: #7DF9FF; }

        /* Search bar styles */
        .search-bar { display: flex; align-items: center; gap: 10px; }
        .search-input { border: 1px solid #ccc; border-radius: 5px; padding: 5px; }

        /* Navbar icon alignment */
        .navbar-icons { display: flex; align-items: center; gap: 15px; }
        .navbar-icons a { color: #44D1C0; text-decoration: none; font-weight: 500; }
        .cart-icon { background: #333; color: white; padding: 5px 8px; border-radius: 5px; }

        /* Silver gradient text for headings and labels */
		.silver-text, .silver-text-heading, .silver-text-subtext {
			font-family: "Copperplate Gothic Bold", "Gloock", serif;
			font-weight: bold;
			background: linear-gradient(135deg, #d9d9d9, #ffffff, #a6a6a6, #e0e0e0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 2px 2px 5px rgba(255, 255, 255, 0.6),
                         -2px -2px 5px rgba(100, 100, 100, 0.3);
            letter-spacing: 2px;
		}
        .silver-text { font-style: italic; text-transform: uppercase; } /* Main page title */
        .silver-text-heading { font-size: 1.5rem; } /* Option title */
        .silver-text-subtext { font-size: 1rem; } /* Option details */

        /* Cyan links for support options */
		.cyan-text {
            color: #00FFFF;
            font-weight: bold;
            text-decoration: none;
            transition: color 0.3s ease, text-shadow 0.3s ease;
        }
        .cyan-text:hover {
            color: #00FF7F;
            text-shadow: 0px 0px 5px rgba(0, 255, 255, 0.8);
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <div class="container mt-4">
        <!-- Page title -->
        <div class="content">
            <h2 class="silver-text">Support Center</h2>
        </div>

        <!-- Sidebar + main content layout -->
        <div class="support-container">
            
            <!-- Sidebar with support options -->
            <div class="support-sidebar">
                <h5 class="silver-text">Support Options</h5>
                <ul class="list-group">
                    @foreach (var option in Model.SupportOptions)
                    {
                        <li class="list-group-item">
                            <!-- Link to reload page with selected option -->
                            <a asp-page="/Support" asp-route-option="@option.Name" class="cyan-text">@option.Name</a>
                        </li>
                    }
                </ul>
            </div>

            <!-- Main content area: shows details for the selected support option -->
            <div class="support-content">
                <h4 class="silver-text-heading">@Model.SelectedOption</h4>
                <p class="silver-text-subtext">@Model.OptionDetails</p>
            </div>
        </div>
    </div>
</body>
</html>
