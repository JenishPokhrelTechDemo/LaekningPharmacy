@page
@model Laekning.Pages.RecommendationsModel
@{
    ViewData["Title"] = "Recommended Products";
}

<style>

		.content {
			width: 100%;
			min-height: 30px;
            flex-grow: 1;
            background-color: rgba(0, 0, 0, 0.6); 
            padding: 20px;
            border-radius: 10px;
			text-align: center;
            box-shadow:  0 4px 10px rgba(0, 255, 255, 0.3);
			backdrop-filter: blur(8px);
		}
		
		.silver-text-subtext {
			font-family: "Copperplate Gothic Bold", "Gloock", serif; /* Fallback to Gloock if Copperplate is unavailable */
			background: linear-gradient(135deg, #d9d9d9, #ffffff, #a6a6a6, #e0e0e0);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			text-shadow: 2px 2px 5px rgba(255, 255, 255, 0.6),
						-2px -2px 5px rgba(100, 100, 100, 0.3);
			letter-spacing: 2px; 
		}

</style>
		

<h2 class="content"><div class="silver-text-subtext">Products you might require</div></h2>

@if (!Model.RecommendedProducts.Any())
{
    <div class="alert alert-warning text-center mt-4">
        No recommendations available.
    </div>
}
else
{
    <div class="category-page">
        <div class="products-container d-flex flex-wrap justify-content-center gap-4">
            @foreach (var product in Model.RecommendedProducts)
            {
                @await Html.PartialAsync("ProductSummary", product)
            }
        </div>
    </div>
}

