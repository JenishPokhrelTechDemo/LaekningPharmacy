    font-weight: bold;
    transition: background 0.3s ease;
	}

	.add-to-cart:hover {
		background: #00a3a3;
	}
	
	.button-container {
    display: flex;
    justify-content: center; /* centers horizontally */
    margin-top: 20px; /* spacing above button */
	}
	
	.custom-header {
        text-align: center;
        font-size: 1.75rem;
        margin-bottom: 1rem;
        padding: 0.75rem;
        background: rgba(255, 255, 255, 0.3);
        border-radius: 12px;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.4);
        color: #000;
    }
    </style>
	
	
}



