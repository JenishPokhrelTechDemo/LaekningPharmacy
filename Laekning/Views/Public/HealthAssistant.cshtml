@model List<Laekning.Controllers.ChatMessage>

@{
    // Page title and layout
    ViewData["Title"] = "Health Assistant";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<!-- Main Chat Wrapper -->
<div class="chat-wrapper">
    <!-- Glassy/frosted container for chat UI -->
    <div class="chat-glass-container">
        <h2 class="glow-heading">Health Assistant</h2>

        <!-- Chat messages display -->
        <div id="chat-box">
            @if (Model != null && Model.Any())
            {
                // Loop through all chat messages
                foreach (var msg in Model)
                {
                    // Determine bubble class based on role
                    var cssClass = msg.Role == "user" ? "chat-bubble user" : "chat-bubble bot";
                    <div class="@cssClass">
                        @Html.Raw(msg.Content) <!-- Render message content as HTML -->
                    </div>
                }
            }
        </div>

        <!-- Chat input form -->
        <form class="chat-form" method="post">
            <input type="text" name="query" placeholder="Ask me anything..." autocomplete="off" />
            <button type="submit">Send</button>
        </form>
    </div>
</div>

<script>
    // Auto-scroll chat box to the bottom on page load so latest messages are visible
    const chatBox = document.getElementById('chat-box');
    chatBox.scrollTop = chatBox.scrollHeight;
</script>

<style>
    /* Fullscreen background image */
    body {
        background-image: url('/images/molecular-illustration.jpg'); 
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }
    
    /* Main chat wrapper positioning */
    .chat-wrapper {
        position: absolute;
        top: 100px;
        left: 50%;
        transform: translateX(-61%); /* Center horizontally (custom offset for design) */
        z-index: 1;
    }

    /* Frosted glass effect container */
    .chat-glass-container {
        width: 100%;
        max-width: 800px;
        height: 90vh;
        display: flex;
        flex-direction: column; /* Stack header, chat box, and form vertically */
        justify-content: center;
        align-items: center;
        padding: 25px;
        border-radius: 15px;
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(12px); /* Glassy blur effect */
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.2); /* Soft cyan glow */
        color: #fff;
        box-sizing: border-box;
    }

    /* Scrollable chat messages container */
    #chat-box {
        flex-grow: 1; /* Fill available vertical space */
        overflow-y: auto; /* Scroll if content overflows */
        margin-bottom: 15px;
        padding-right: 10px;
        width: 100%;
    }

    /* Heading styling */
    .glow-heading {
        text-align: center;
        font-size: 2em;
        color: cyan;
        text-shadow: 0 0 10px cyan;
        margin-bottom: 20px;
    }

    /* Generic chat bubble styling */
    .chat-bubble {
        padding: 10px 15px;
        margin: 10px;
        border-radius: 10px;
        background: rgba(0, 255, 255, 0.1);
        box-shadow: 0 0 12px rgba(0, 255, 255, 0.5);
        max-width: 70%; /* Limit width */
    }

    /* User messages: right aligned with distinct color */
    .chat-bubble.user {
        margin-left: auto;
        text-align: right;
        background: rgba(150, 255, 255, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(8px);
        box-shadow: 0 0 10px rgba(150, 255, 255, 0.4);
    }

    /* Bot messages: left aligned with different color */
    .chat-bubble.bot {
        margin-right: auto;
        text-align: left;
        background: rgba(0, 180, 255, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(6px);
        box-shadow: 0 0 12px rgba(0, 180, 255, 0.3);
    }

    /* Chat input form layout */
    .chat-form {
        display: flex;
        gap: 10px;
        width: 100%;
    }

    /* Input box styling */
    .chat-form input[type="text"] {
        flex-grow: 1;
        padding: 10px;
        background: rgba(255, 255, 255, 0.2);
        color: #ffffff;
        border: 2px solid rgba(0, 255, 255, 0.9);
        border-radius: 10px;
    }

    /* Submit button styling */
    .chat-form button {
        padding: 10px 20px;
        background: cyan;
        color: black;
        border: none;
        border-radius: 10px;
        box-shadow: 0 0 10px cyan; /* Neon glow effect */
    }
</style>
