@model LoginModel
@{
    Layout = null; // No master layout is used; this is a standalone login page
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" /> <!-- Ensure responsive layout -->
    <title>Laekning</title>
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" /> <!-- Bootstrap CSS -->
</head>

<!-- Navigation bar at the top -->
<nav class="navbar navbar-expand-lg navbar-light navbar-custom">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <!-- Left Section: Logo -->
        <a class="navbar-brand" href="/Page1">
            <img src="/images/logo-removebg-preview.png" alt="Laekning Logo"> <!-- Company logo -->
        </a>
    </div>
</nav>

<body>
    <div class="m-1 p-1">
        <!-- Validation summary for login errors -->
        <div class="text-danger" asp-validation-summary="All"></div>

        <!-- Login form -->
        <form asp-action="Login" asp-controller="Account" method="post">
            <!-- Hidden field to store return URL after login -->
            <input type="hidden" asp-for="ReturnUrl" />

            <!-- Username input -->
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <!-- Password input -->
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>

            <!-- Submit button -->
            <button class="btn btn-primary mt-2" type="submit">
                Log In
            </button>
        </form>
    </div>
</body>
</html>

<!-- Styles for the login page -->
<style>
    /* Body background with fixed image */
    body {
        background-image: url('/images/molecular-illustration.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    /* Container for the login form with "glassy" frosted effect */
    .checkout-container {
        background: rgba(0, 0, 0, 0.4); /* semi-transparent dark overlay */
        backdrop-filter: blur(10px);    /* blur effect for glassy look */
        padding: 25px;
        border-radius: 15px;
        max-width: 600px;
        margin: auto;
        box-shadow: 0 0 15px rgba(0, 255, 255, 0.4); /* soft glow effect */
        border: 1px solid rgba(255, 255, 255, 0.2); /* subtle border for contrast */
    }

    /* Input field styling for glassy/frosted effect */
    .form-control {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        color: silver; /* text color */
        border: 1px solid rgba(0, 255, 255, 0.7);
        padding: 12px;
        font-size: 16px;
        border-radius: 8px;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
    }

    /* Hover/focus effect for input fields */
    .form-control:hover,
    .form-control:focus {
        background: rgba(255, 255, 255, 0.2);
        box-shadow: 0 0 8px rgba(0, 255, 255, 0.6);
    }

    /* Placeholder text styling */
    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    /* Label styling */
    label {
        font-size: 16px;
        font-weight: bold;
        color: rgba(255, 255, 255, 0.9);
    }

    /* Login button styling */
    .btn-primary {
        background: rgba(0, 255, 255, 0.7);
        color: black;
        font-weight: bold;
        padding: 12px 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 255, 255, 0.7);
        transition: all 0.3s ease-in-out;
    }

    .btn-primary:hover {
        background: rgba(0, 255, 255, 1);
        box-shadow: 0 0 20px rgba(0, 255, 255, 1);
    }

    /* Text styling with silver/azure glow effect */
    .silver-text,
    .silver-text-heading,
    .silver-text-subtext {
        color: #ffffff;
        text-shadow: 0 0 10px rgba(0, 255, 255, 0.9), 0 0 15px rgba(100, 100, 100, 0.5);
    }

    /* Dark overlay behind the body for better contrast */
    body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(5px);
        z-index: -1;
    }

    /* Navbar styling */
    .navbar-custom {
        background-color: #F0FFFF; /* Azure-like color */
        padding: 10px 20px;
    }

    /* Logo styling */
    .navbar-brand img {
        height: 45px;
        max-width: 265px;
    }
</style>
